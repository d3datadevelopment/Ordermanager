{% block ordermanager_admin_action_moveordertofolder %}
    <dl class="{{ blActionRestriction }}">
        {% include "@d3ordermanager/admin/inc/d3ordermanager_activeswitch.html.twig" with {oActionRequ: oAction, blActionRestriction: blActionRestriction, readonly: readonly} %}
        <dd>
            {% if oView.isEditMode() %}
                {% block ordermanager_admin_action_moveordertofolder_editor %}
                    <label for="sOrderFolder" style="position: absolute; left: -2000px">{{ translate({ ident: "D3_ORDERMANAGER_ACTION_ORDERMOVE2FOLDER" }) }}</label>
                    <SELECT id="sOrderFolder" class="editinput" name="value[sOrderFolder]" size="1" {{ blActionRestriction }} {{ readonly }}>
                        {% for field, color in oView.getItemFolders() %}
                            <option value="{{ field }}" {% if edit.getValue('sOrderFolder') == field %}selected{% endif %} style="color: {{ color }};">{{ translate({ ident: field, noerror: true }) }}</option>
                        {% endfor %}
                    </SELECT>
                {% endblock %}
            {% else %}
                {% block ordermanager_admin_action_moveordertofolder_viewer %}
                    <ul>
                        {% for field, color in oView.getItemFolders() %}
                            {% if edit.getValue('sOrderFolder') == field %}
                                <li>
                                    {{ translate({ ident: field, noerror: true }) }}
                                </li>
                            {% endif %}
                        {% endfor %}
                    </ul>
                {% endblock %}
            {% endif %}
            {% include "inputhelp.html.twig" with {'sHelpId': help_id("D3_ORDERMANAGER_ACTION_ORDERMOVE2FOLDER_DESC"), 'sHelpText': help_text("D3_ORDERMANAGER_ACTION_ORDERMOVE2FOLDER_DESC")} %}
        </dd>
        <div class="spacer"></div>
    </dl>
{% endblock %}