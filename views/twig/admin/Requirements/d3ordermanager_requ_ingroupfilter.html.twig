{% block ordermanager_admin_requ_ingroupfilter %}
    <dl class="{{ blActionRestriction }}">
        {% include "@d3ordermanager/admin/inc/d3ordermanager_activeswitch.html.twig" with {oActionRequ: oRequ, blActionRestriction: blActionRestriction, readonly: readonly} %}
        <dd>
            {% if oView.isEditMode() %}
                {% block ordermanager_admin_requ_ingroupfilter_editor %}
                    <input type="hidden" name="value[sCustInGroupId]" value="">
                    <label for="sCustInGroupId" style="position: absolute; left: -2000px">{{ translate({ ident: "D3_ORDERMANAGER_REQU_INGROUP" }) }}</label>
                    <SELECT class="editinput" name="value[sCustInGroupId][]" id="sCustInGroupId" size="5" multiple {{ blActionRestriction }} {{ readonly }}>
                        {% for oGroup in oView.getGroupsList() %}
                            <option value="{{ oGroup.getId() }}" {% if edit.getValue('sCustInGroupId') is iterable and oGroup.getId() in edit.getValue('sCustInGroupId') %}selected{% endif %}>{{ oGroup.getFieldData('oxtitle') }}</option>
                        {% endfor %}
                    </SELECT><br>
                    {{ translate({ ident: "D3_ORDERMANAGER_REQU_MULTIPLE" }) }}<br>
                    <input type="button" href="#" onclick="selectAllListElems(document.getElementById('sCustInGroupId')); return false;" value="{{ translate({ ident: "D3_GENERAL_ORDERMANAGER_SELECT_ALL" }) }}" {{ blActionRestriction }} {{ readonly }}> <input type="button" href="#" onclick="selectNoListElems(document.getElementById('sCustInGroupId')); return false;" value="{{ translate({ ident: "D3_GENERAL_ORDERMANAGER_SELECT_NONE" }) }}" {{ blActionRestriction }} {{ readonly }}>
                {% endblock %}
            {% else %}
                {% block ordermanager_admin_requ_ingroupfilter_viewer %}
                    <ul>
                        {% for oGroup in oView.getGroupsList() %}
                            {% if edit.getValue('sCustInGroupId') is iterable and oGroup.getId() in edit.getValue('sCustInGroupId') %}
                                <li>
                                    {{ oGroup.getFieldData('oxtitle') }}
                                </li>
                            {% endif %}
                        {% endfor %}
                    </ul>
                {% endblock %}
            {% endif %}
            {% include "inputhelp.html.twig" with {'sHelpId': help_id("D3_ORDERMANAGER_REQU_INGROUP_DESC"), 'sHelpText': help_text("D3_ORDERMANAGER_REQU_INGROUP_DESC")} %}
        </dd>
        <div class="spacer"></div>
    </dl>
{% endblock %}