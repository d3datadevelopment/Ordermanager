{% block ordermanager_admin_requ_orderfield %}
    <dl class="{{ blActionRestriction }}">
        {% include "@d3ordermanager/admin/inc/d3ordermanager_activeswitch.html.twig" with {oActionRequ: oRequ, blActionRestriction: blActionRestriction, readonly: readonly} %}
        <dd>
            {% if oView.isEditMode() %}
                {% block ordermanager_admin_requ_orderfield_editor %}
                    <label for="RequOrderFieldField">{{ translate({ ident: "D3_ORDERMANAGER_REQU_ORDERFIELDVALUE_FIELD" }) }}</label>
                    <input id="RequOrderFieldField" class="editinput" type="text" size="30" maxlength="100" name="value[sOrderField_FieldName]" value="{{ edit.getValue('sOrderField_FieldName') }}" {{ readonly }} {{ blActionRestriction }}>
                    {% include "inputhelp.html.twig" with {'sHelpId': help_id("D3_ORDERMANAGER_REQU_ORDERFIELDVALUE_FIELD_DESC"), 'sHelpText': help_text("D3_ORDERMANAGER_REQU_ORDERFIELDVALUE_FIELD_DESC")} %}<br>
                    {{ translate({ ident: "D3_ORDERMANAGER_REQU_ORDERFIELDVALUE_VALUE" }) }} <br>
                    <input id="RequOrderFieldTypeContent" type="radio" style="margin-left: 30px;" name="value[sCheckOrderFieldType]" value="content" {% if edit.getValue('sCheckOrderFieldType') == 'content' or edit.getValue('sCheckOrderFieldType') == '' %}checked{% endif %} {{ readonly }} {{ blActionRestriction }}>
                    <label for="RequOrderFieldTypeContent">{{ translate({ ident: "D3_ORDERMANAGER_REQU_ORDERFIELDVALUETYPE_CONTENT" }) }}</label>
                    <label for="sOrderFieldValue" style="position: absolute; left: -2000px">{{ translate({ ident: "D3_ORDERMANAGER_REQU_ORDERFIELDVALUE" }) }}</label>
                    <input id="sOrderFieldValue" class="editinput" type="text" size="30" maxlength="100" name="value[sOrderField_FieldValue]" value="{{ edit.getValue('sOrderField_FieldValue') }}" {{ readonly }} {{ blActionRestriction }}>
                    {% include "inputhelp.html.twig" with {'sHelpId': help_id("D3_ORDERMANAGER_REQU_ARTICLECONTENT2_DESC"), 'sHelpText': help_text("D3_ORDERMANAGER_REQU_ARTICLECONTENT2_DESC")} %}<br>
                    <input id="RequOrderFieldTypeEmpty" type="radio" style="margin-left: 30px;" name="value[sCheckOrderFieldType]" value="empty" {% if edit.getValue('sCheckOrderFieldType') == 'empty' %}checked{% endif %} {{ readonly }} {{ blActionRestriction }}>
                    <label for="RequOrderFieldTypeEmpty">{{ translate({ ident: "D3_ORDERMANAGER_REQU_ORDERFIELDVALUETYPE_EMPTY" }) }}</label><br>
                    <input id="RequOrderFieldTypeNotEmpty" type="radio" style="margin-left: 30px;" name="value[sCheckOrderFieldType]" value="notempty" {% if edit.getValue('sCheckOrderFieldType') == 'notempty' %}checked{% endif %} {{ readonly }} {{ blActionRestriction }}>
                    <label for="RequOrderFieldTypeNotEmpty">{{ translate({ ident: "D3_ORDERMANAGER_REQU_ORDERFIELDVALUETYPE_NOTEMPTY" }) }}</label>
                {% endblock %}
            {% else %}
                {% block ordermanager_admin_requ_orderfield_viewer %}
                    {{ translate({ ident: "D3_ORDERMANAGER_REQU_ORDERFIELDVALUE_FIELD" }) }} {{ edit.getValue('sOrderField_FieldName') }}<br>
                    {{ translate({ ident: "D3_ORDERMANAGER_REQU_ORDERFIELDVALUE_VALUE" }) }} <br>
                    {% if edit.getValue('sCheckOrderFieldType') == 'content' or edit.getValue('sCheckOrderFieldType') == '' %}
                        {{ translate({ ident: "D3_ORDERMANAGER_REQU_ORDERFIELDVALUETYPE_CONTENT" }) }} {{ edit.getValue('sOrderField_FieldValue') }}
                        {% include "inputhelp.html.twig" with {'sHelpId': help_id("D3_ORDERMANAGER_REQU_ARTICLECONTENT2_DESC"), 'sHelpText': help_text("D3_ORDERMANAGER_REQU_ARTICLECONTENT2_DESC")} %}<br>
                    {% endif %}
                    {% if edit.getValue('sCheckOrderFieldType') == 'empty' %}
                        {{ translate({ ident: "D3_ORDERMANAGER_REQU_ORDERFIELDVALUETYPE_EMPTY" }) }}
                    {% endif %}
                    {% if edit.getValue('sCheckOrderFieldType') == 'notempty' %}
                        {{ translate({ ident: "D3_ORDERMANAGER_REQU_ORDERFIELDVALUETYPE_NOTEMPTY" }) }}
                    {% endif %}
                {% endblock %}
            {% endif %}
            {% include "inputhelp.html.twig" with {'sHelpId': help_id("D3_ORDERMANAGER_REQU_ORDERFIELD_DESC"), 'sHelpText': help_text("D3_ORDERMANAGER_REQU_ORDERFIELD_DESC")} %}
        </dd>
        <div class="spacer"></div>
    </dl>
{% endblock %}